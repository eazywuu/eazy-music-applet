<!--pages/login/index.wxml-->
<view class="page">
    <view class="login-form">
        <view class="header">
            <view class="tab active">
                登录
            </view>
            <view class="tab">
                注册
            </view>
        </view>
        <view class="content">
            <view class="title">
                登录
            </view>
            <view class="title-tips">
                嗨，你好！欢迎来到弈哲音乐
            </view>
            <view class="form-item">
                <view class="label">
                    用户名/手机
                </view>
                <input placeholder="请输入用户名/手机" placeholder-class="placeholder" type="text" />
                <view class="label">
                    密码
                </view>
                <input placeholder="请输入密码" placeholder-class="placeholder" type="password" />
            </view>
            <view class="forget-password">
                忘记密码？
            </view>
            <button>登录</button>
            <view class="create-account">
                没有账号？
                <view class="action">
                    立即注册
                </view>
            </view>
        </view>
    </view>
</view>